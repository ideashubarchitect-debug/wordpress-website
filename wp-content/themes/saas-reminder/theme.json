{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "SaaS Reminder",
	"description": "A minimal block theme for a daily task reminder SaaS app",
	"settings": {
		"color": {
			"palette": [
				{
					"color": "#5B7CFF",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#0B1020",
					"name": "Dark",
					"slug": "dark"
				},
				{
					"color": "#0F1535",
					"name": "Surface",
					"slug": "surface"
				},
				{
					"color": "#E8ECFF",
					"name": "Text",
					"slug": "text"
				},
				{
					"color": "#FFFFFF",
					"name": "White",
					"slug": "white"
				},
				{
					"color": "#F8F9FF",
					"name": "Light Background",
					"slug": "light-bg"
				},
				{
					"color": "#10B981",
					"name": "Success",
					"slug": "success"
				},
				{
					"color": "#6B7280",
					"name": "Muted",
					"slug": "muted"
				}
			]
		},
		"typography": {
			"fontSizes": [
				{
					"size": "14px",
					"slug": "small"
				},
				{
					"size": "16px",
					"slug": "medium"
				},
				{
					"size": "18px",
					"slug": "large"
				},
				{
					"size": "24px",
					"slug": "x-large"
				},
				{
					"size": "clamp(2rem, 5vw, 4rem)",
					"slug": "xx-large"
				}
			],
			"fontFamilies": [
				{
					"fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
					"name": "System Font",
					"slug": "system"
				}
			]
		},
		"spacing": {
			"spacingScale": {
				"steps": 0
			},
			"spacingSizes": [
				{
					"size": "0.5rem",
					"slug": "10"
				},
				{
					"size": "1rem",
					"slug": "20"
				},
				{
					"size": "1.5rem",
					"slug": "30"
				},
				{
					"size": "2rem",
					"slug": "40"
				},
				{
					"size": "3rem",
					"slug": "50"
				},
				{
					"size": "4rem",
					"slug": "60"
				},
				{
					"size": "6rem",
					"slug": "70"
				},
				{
					"size": "8rem",
					"slug": "80"
				}
			]
		},
		"layout": {
			"contentSize": "800px",
			"wideSize": "1200px"
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--dark)",
			"text": "var(--wp--preset--color--text)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--system)",
			"fontSize": "var(--wp--preset--font-size--medium)",
			"lineHeight": "1.6"
		},
		"spacing": {
			"padding": {
				"top": "var(--wp--preset--spacing--40)",
				"bottom": "var(--wp--preset--spacing--40)"
			}
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--text)"
					}
				},
				":focus": {
					"outline": {
						"color": "var(--wp--preset--color--primary)",
						"style": "solid",
						"width": "2px",
						"offset": "2px"
					}
				}
			},
			"button": {
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--white)"
				},
				"border": {
					"radius": "6px"
				},
				"typography": {
					"fontWeight": "600"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--text)",
						"text": "var(--wp--preset--color--dark)"
					}
				},
				":focus": {
					"outline": {
						"color": "var(--wp--preset--color--primary)",
						"style": "solid",
						"width": "2px",
						"offset": "2px"
					}
				}
			},
			"heading": {
				"color": {
					"text": "var(--wp--preset--color--text)"
				},
				"typography": {
					"fontWeight": "700",
					"lineHeight": "1.2"
				}
			}
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	]
}
